{
  "productName": "HERMES BPSE",
  "version": "0.1.0",
  "identifier": "com.beagle.hermes",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "../src",
    "distDir": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "HERMES Background Paper Synthesis Engine",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "all": false,
      "open": true
    },
    "fs": {
      "scope": ["$APPDATA", "$DOCUMENT", "$DOWNLOAD", "$HOME"]
    }
  }
}

