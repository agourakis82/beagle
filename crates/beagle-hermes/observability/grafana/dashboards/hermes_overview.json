{
  "dashboard": {
    "title": "HERMES BPSE Overview",
    "tags": ["hermes", "browse"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Manuscripts by State",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "hermes_manuscripts_total{state=\"Drafting\"}",
            "legendFormat": "Drafting",
            "refId": "A"
          },
          {
            "expr": "hermes_manuscripts_total{state=\"Review\"}",
            "legendFormat": "Review",
            "refId": "B"
          },
          {
            "expr": "hermes_manuscripts_total{state=\"Refining\"}",
            "legendFormat": "Refining",
            "refId": "C"
          },
          {
            "expr": "hermes_manuscripts_total{state=\"Ready\"}",
            "legendFormat": "Ready",
            "refId": "D"
          }
        ]
      },
      {
        "id": 2,
        "title": "Insights Captured (24h)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "increase(hermes_insights_total[24h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Synthesis Jobs Success Rate",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "rate(hermes_synthesis_success_total[5m]) / rate(hermes_synthesis_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 4,
        "title": "API Latency (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(hermes_api_latency_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          }
        ]
      },
      {
        "id": 5,
        "title": "LLM API Calls",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(hermes_llm_calls_total[5m])",
            "legendFormat": "{{model}} - {{status}}",
            "refId": "A"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}

