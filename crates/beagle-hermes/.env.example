# HERMES BPSE Configuration
# Copy this file to .env and fill in your values

# Neo4j Configuration
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=hermespassword

# PostgreSQL Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/beagle

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Whisper Model Path
WHISPER_MODEL=models/whisper-base.en

# Synthesis Schedule (cron expression)
SYNTHESIS_SCHEDULE=0 0 */6 * * *

# Minimum insights for synthesis
MIN_INSIGHTS_FOR_SYNTHESIS=20

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
