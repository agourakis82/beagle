# BEAGLE v0.4 Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Required: Neo4j Graph Database
# ============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# ============================================================================
# Optional: LLM Providers (Router auto-detects available providers)
# ============================================================================

# Claude MAX Subscription (enables Claude Direct)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your_key_here

# GitHub Copilot Subscription (enables Copilot with o1-preview, Claude 3.5, GPT-4o)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_token_here

# Cursor Pro Subscription (enables Cursor with Claude 3.5, GPT-4)
# Get from Cursor settings
CURSOR_API_KEY=your_cursor_token_here

# Grok Unlimited (primary workhorse - 94% of queries)
# Get from: https://console.x.ai/
GROK_API_KEY=xai-your_key_here

# ============================================================================
# Optional: Specialized Providers
# ============================================================================

# PubMed NCBI API Key (increases rate limit from 3 to 10 req/s)
# Get from: https://www.ncbi.nlm.nih.gov/account/settings/
NCBI_API_KEY=your_ncbi_key_here

# DeepSeek Math (for mathematical reasoning, ~$0.14/M tokens)
# Get from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=sk_your_deepseek_key_here

# ============================================================================
# Optional: Monitoring & Observability
# ============================================================================

# Rust log level (debug, info, warn, error)
RUST_LOG=info

# Enable tracing
RUST_BACKTRACE=1

# ============================================================================
# Optional: BEAGLE Configuration
# ============================================================================

# Environment profile (dev, lab, prod)
BEAGLE_PROFILE=dev

# Enable Grok 4 Heavy for high-bias topics
BEAGLE_HEAVY_ENABLE=true

# Max Heavy calls per run
BEAGLE_HEAVY_MAX_CALLS_PER_RUN=10

# Max Heavy tokens per run
BEAGLE_HEAVY_MAX_TOKENS_PER_RUN=200000
